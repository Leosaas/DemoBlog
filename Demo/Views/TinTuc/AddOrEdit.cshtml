<<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>

<div class="container">
    <div class="card">
        <div class="card-body">
            <p class="mt-0 mb-2 fw-semibold text-dark font-18 text-center">@ViewBag.RenderedHtmlTitle</p>
            <form asp-action="AddOrEdit" asp-controller="TinTuc" asp-route-id="@Model.IDTinTuc" enctype ="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IDTinTuc" value="@Model.IDTinTuc" />
                <input type="hidden" asp-for="NgayTao" value="@Model.NgayTao" />
                <input type="hidden" asp-for="NgayUpdate" value="@Model.NgayUpdate" />
                <input type="hidden" asp-for="Url" value="@Model.Url" />
                <div class="float-left"> 
                     <p>Hình ảnh</p>
                    @{
                        var imgSrc = "";
                        if(Model.HinhAnh != null)
                        {
                            
                            
                            
                                    @*var base64 = Convert.ToBase64String(Model.pImage);*@
                                    <input type="hidden" asp-for="HinhAnh" value="@Model.HinhAnh" />
                            imgSrc = @Url.Content(Model.HinhAnh);

                        }
                        }
                        <div class="input-group mb-2">
                            <label for="ImageData">
                                    <img src="@imgSrc" width="256px" height="256px" id="output"/>
                             </label>
                            <input class="form-control" type="file" id="ImageData" name="ImageData" accept="image/png, image/gif, image/jpeg, image/jpg" style="display: none" onchange="loadFile(event)">
                            <script>
                                 var loadFile = function(event) {
                                 var output = document.getElementById('output');
                                 output.src = URL.createObjectURL(event.target.files[0]);
                                 output.onload = function() {
                                    URL.revokeObjectURL(output.src) // free memory
                                    }
                                };
                            </script>
                    </div>
                </div>
                <div class="float-left" style="width: 70%; margin-left: 20px">
                        <div class="form-group mb-2">
                        <label asp-for="TieuDe" class="control-label"></label>
                        <div class="input-group mb-2">
                            <input asp-for="TieuDe" class="form-control" placeholder="Nhập tiêu đề" value="@Model.TieuDe" />
                        </div>
                        <span asp-validation-for="TieuDe" class="text-danger"></span>
                        </div><!--end form-group-->


                    <div class="form-group mb-2">
                        <label asp-for="TomTat" class="control-label"></label>
                        <div class="input-group mb-2">
                            <input asp-for="TomTat" class="form-control" placeholder="Nhập tóm tắt" value="@Model.TomTat" />
                        </div>
                        <span asp-validation-for="TomTat" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                        <label asp-for="TrangThai" class="control-label"></label>
                        <div class="input-group mb-2">
                            <input asp-for="TrangThai" type="radio" value="True" />Bật</br>
                            <input asp-for="TrangThai" type="radio" value="False" />   Tắt</br>
                        </div>
                        <span asp-validation-for="TomTat" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                        <label asp-for="NoiDung" class="control-label"></label>
                        <div class="input-group mb-2">
                            <textarea runat="server" id="textBox" TextMode="Multiline" class="form-control" name="textBox" asp-for="NoiDung" placeholder="Nhập nội dung">
                                @Model.NoiDung
                            </textarea>

                            <script>


                                CKEDITOR.replace('textBox');

                                function saveCKEditorContent() {
                                    var ckEditorContent = CKEDITOR.instances.editor.getData();

                                    $.ajax({
                                        type: 'POST',
                                        url: '/YourController/SaveCKEditorContent',
                                        contentType: 'application/json',
                                        data: JSON.stringify(ckEditorContent),
                                        success: function (result) {
                                            if (result.success) {
                                                alert('Content saved successfully!');
                                            } else {
                                                alert('Error saving content: ' + result.error);
                                            }
                                        },
                                        error: function () {
                                            alert('Error saving content.');
                                        }
                                    });
                                }
                            </script>
                        </div>
                        <span asp-validation-for="NoiDung" class="text-danger"></span>
                    </div><!--end form-group-->
                  
                    <div class="form-group mb-2">
                        <label asp-for="DanhMucs" class="control-label">Danh mục</label>
                        <div class="input-group mb-2">
                            
                            <select data-placeholder="Begin typing a name to filter..." multiple class="chosen-select form-control" name="DanhMucs" id="DanhMucs" asp-for="@Model.DanhMucs" value="@Model.DanhMucs">
                                <option value=""></option>
                                @{
                                    foreach (DanhMuc u in ViewBag.DanhMuc)
                                    {
                                        if (Model.DanhMucs!=null && Model.DanhMucs.Contains(u))
                                        {
                                                    <option value="@u.IDDanhMuc" selected>@u.TenDanhMuc</option>
                                        }
                                        else
                                        {
                                                    <option value="@u.IDDanhMuc">@u.TenDanhMuc</option>
                                        }
                                       
                                    }
                                }
                            </select>
                            
                        </div>
                        <span asp-validation-for="DanhMucs" class="text-danger"></span>
                    </div><!--end form-group-->
                   <script>
      
                        $(".chosen-select").chosen({
                            no_results_text: "Oops, nothing found!"
                        })
                   </script>
                       
                   

